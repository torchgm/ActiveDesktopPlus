<Window x:Class="ActiveDesktop.ADPVideoWallpaper"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" 
        WindowState="Maximized" WindowStyle="None"
        Title="ADPVideoPlayer" Height="1" Width="1" VerticalAlignment="Center" HorizontalAlignment="Center" Background="Transparent">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <MediaElement x:Name="VideoPlayer" MediaEnded="VideoPlayer_MediaEnded" LoadedBehavior="Manual" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" IsMuted="True" Stretch="UniformToFill"/>
    </Grid>
</Window>
