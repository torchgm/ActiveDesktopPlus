<Window x:Class="ActiveDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActiveDesktop"
        mc:Ignorable="d"
        Title="Active Desktop Configurator" Height="450" KeyDown="OnKeyDownHandler" Width="260">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo>
            <TaskbarItemInfo.ThumbButtonInfos>
                <ThumbButtonInfo/>
            </TaskbarItemInfo.ThumbButtonInfos>
        </TaskbarItemInfo>
    </Window.TaskbarItemInfo>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="26*"/>
            <ColumnDefinition Width="37*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="ApplyHwndButton" Content="Send to Desktop" Margin="7,320,70,60" Click="ApplyHwndButton_Click" Grid.Column="1" Grid.ColumnSpan="2"/>
        <TextBox x:Name="HwndInputTextBox" HorizontalAlignment="Left" Height="23" Margin="7,162,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="112" Grid.Column="1" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
