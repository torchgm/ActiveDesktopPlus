<Window x:Class="ActiveDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActiveDesktop"
        mc:Ignorable="d" Height="256" KeyDown="OnKeyDownHandler" Width="260" ResizeMode="NoResize">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo>
            <TaskbarItemInfo.ThumbButtonInfos>
                <ThumbButtonInfo/>
            </TaskbarItemInfo.ThumbButtonInfos>
        </TaskbarItemInfo>
    </Window.TaskbarItemInfo>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="ApplyHwndButton" Content="Send to Desktop" Margin="45,169,45,18" Click="ApplyHwndButton_Click"/>
        <TextBox x:Name="HwndInputTextBox" Height="23" Margin="70,17,70,0" TextWrapping="Wrap" VerticalAlignment="Top" Focusable="False"/>
        <TextBox x:Name="textBox" Height="99" Margin="20,55,20,0" TextWrapping="Wrap" VerticalAlignment="Top" Focusable="False" Text="To add an app, hold B then hover your mouse over the target app's titlebar. Then, release B and click &quot;Send to Desktop&quot;"/>
    </Grid>
</Window>
