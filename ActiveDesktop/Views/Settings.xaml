<Page x:Class="ActiveDesktop.Views.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ActiveDesktop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="462" d:DesignWidth="325"
      Title="Settings"
      xmlns:ui="http://schemas.modernwpf.com/2019">


    <Grid>
        <ui:ToggleSwitch x:Name="StartupToggle" Margin="10,29,0,389" ToolTip="Add ADP to startup apps so it opens when you log in" Toggled="StartupToggle_Toggled"/>
        <ui:ToggleSwitch x:Name="ThemeToggle" Margin="10,101,0,329" ToolTip="Enable the dark theme for ADP's UI" Toggled="ThemeToggle_Toggled" Height="32"/>
        <Label x:Name="label" Content="Run on startup" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy" Content="Use dark theme" HorizontalAlignment="Left" Margin="10,76,0,0" VerticalAlignment="Top"/>
    </Grid>
</Page>
